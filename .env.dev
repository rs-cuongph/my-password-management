# Development Environment Variables
NODE_ENV=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=vibe_kanban_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/vibe_kanban_dev?schema=public"

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Application Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Server Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Swagger Documentation
SWAGGER_ENABLE=true
SWAGGER_PATH=docs

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_DEST=./uploads

# Email Configuration (Development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
EMAIL_FROM=noreply@vibe-kanban.local

# Development Features
ENABLE_SEED_DATA=true
ENABLE_DEV_ROUTES=true
ENABLE_MOCK_DATA=true
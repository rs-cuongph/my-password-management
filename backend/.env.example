# Application Configuration
NODE_ENV=development
BACKEND_PORT=3001
API_PREFIX=api
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/vibe_kanban?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SENSITIVE_MAX=5
RATE_LIMIT_SENSITIVE_WINDOW=900000

# 2FA Configuration
TOTP_ISSUER=VibeKanban
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30
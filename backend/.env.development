# Backend Development Environment
NODE_ENV=development

# Database
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=vibe_kanban_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Server
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API
API_PREFIX=api
API_VERSION=v1
GLOBAL_PREFIX=api/v1

# Documentation
SWAGGER_ENABLE=true
SWAGGER_TITLE=Vibe Kanban API
SWAGGER_DESCRIPTION=API documentation for Vibe Kanban application
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# CORS
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
UPLOAD_DEST=./uploads
UPLOAD_MAX_SIZE=10485760

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG=true
ENABLE_PROFILING=true